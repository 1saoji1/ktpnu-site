{
  "rules": {
    "users": {
      "$user_id": {
        ".write": "$user_id === auth.uid  && data.child('allowed').val() === true",
        ".read": "$user_id === auth.uid && data.child('allowed').val() === true"
      }
    },
    "allowed_accounts": {
      "$user_id": {
        ".write": false,
        ".read": true
      }
    }
  }
}